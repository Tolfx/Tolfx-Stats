                              <a href="/notis/edit/<%= notis._id %>" class="dropdown-item"><%= notis.name %></a>
                            <% } %>
                          <% }) %>
                      </div>
                    </li>
                  </ul>
                  <button class="btn btn-primary" onClick="window.history.back()">Back</button>
                </div>
              </nav>
        </div>
