
<!-- Modal for view blocked ips -->
<div class="modal fade" id="viewBlockedIps" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">All blocked IPS</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <input id="searchTable" class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
                <table class="table table-striped table-dark">
                    <thead>
                      <tr>
                        <th scope="col">IP</th>
                        <th scope="col">Added</th>
                      </tr>
                    </thead>
                    <tbody id="myTable">
                    <% blockedIps.forEach(ip => { %>
                        <tr>
                            <td><%= ip.ip %></td>
                            <td><%= ip.createdAt.toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                    </tbody>
                  </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $("#searchTable").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>