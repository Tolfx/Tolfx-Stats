<div class="container">
    <h2 class="text-center mt-5"><%= _table.tableName %></h2>
    <div class="shadow p-3 rounded">
    <a href="/table/add/<%= _table._id %>" class="btn btn-primary">Create new data</a>
    <a href="/table/edit/table/<%= _table._id %>" class="btn btn-primary">Edit table</a>
    <table class="table rounded shadow mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <% _table.rows[0].forEach(t => { %>
                    <th scope="col"><%= t %></th>
                <% }) %>
            </tr>
            </thead>
        <tbody>
            <% for( let i = 0; i < table.length; i++ ) { %>
                <tr>
                    <th><a href="/table/edit/row/<%= table[i]._id %>">Edit</a> | <a href="#">Remove</a></th>
                    <% table[i].tableData.forEach(td => { %>
                        <td><%= td.value %></td>
                    <% }) %>
                </tr>
            <% } %>
        </tbody>
      </table>
    </div>
</div>